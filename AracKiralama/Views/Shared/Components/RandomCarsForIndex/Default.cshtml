@model IEnumerable<Car>


            @foreach (var item in Model)
            {

                <div class="col-md-4">
                    <div class="car-wrap rounded ftco-animate">
                        <div class="img rounded d-flex align-items-end" style="background-image: url(@item.Image);">
                        </div>
                        <div class="text">
                            <h2 class="mb-0"><a asp-action="CarDetail" asp-route-id="@item.Id">@item.Model</a></h2>
                            <div class="d-flex mb-3">
                                <span class="cat">@item.Brand</span>
                                <p class="price ml-auto">@item.DailyPrice ₺ <span>/günlük</span></p>
                            </div>
                            <p class="d-flex mb-0 d-block"><a asp-action="Booking" asp-route-id="@item.Id" class="btn btn-primary py-2 mr-1">Rezervasyon</a> <a asp-action="CarDetail" asp-route-id="@item.Id" class="btn btn-secondary py-2 ml-1">Detay</a></p>
                        </div>
                    </div>
                </div>
            }