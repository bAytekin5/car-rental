@model IEnumerable<Reservation>

<section class="content">
    <div class="content-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-info card-outline mt-5">
                    <div class="card-header">
                        <h3 class="card-title">Rezervasyon Listesi</h3>
                    </div>
                    <div class="card-body p-0 table-responsive">
                        <table class="table table-bordered table-sm">
                            <thead>
                                <tr>
                                    <th>Yapılış Tarihi</th>
                                    <th>Başlangıç Tarihi</th>
                                    <th>Bitiş Tarihi</th>
                                    <th>Toplam Tutar</th>
                                    <th>Ad Soyad</th>
                                    <th>Email</th>
                                    <th>Telefon</th>
                                    <th>Açıklama</th>
                                    <th>Araç Bilgisi</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.CreatedTime.ToString("g")
                                        </td>
                                        <td>
                                            @item.StartDate.ToString("d")
                                        </td>
                                        <td>
                                            @item.EndDate.ToString("d")
                                        </td>
                                        <td>
                                            @item.TotalPrice?.ToString("0.00")
                                        </td>
                                        <td>
                                            @item.NameSurname
                                        </td>
                                        <td>
                                            @item.Email
                                        </td>
                                        <td>
                                            @item.PhoneNumber
                                        </td>
                                        <td>
                                            @item.Description
                                        </td>
                                        <td>
                                            @item.Car.Brand @item.Car.Model
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-danger btn-xs" data-toggle="modal" data-target="#tt4-@item.Id">
                                                Sil
                                            </button>
                                            <div class="modal fade" id="tt4-@item.Id">
                                                <div class="modal-dialog">
                                                    <div class="modal-content bg-danger">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">
                                                                Rezervasyonu Sil
                                                            </h5>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">×</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <p>Bu İşlem Geri Alınamaz</p>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-dark">Sil</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>