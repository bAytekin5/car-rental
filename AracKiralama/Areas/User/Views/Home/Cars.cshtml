@model IEnumerable<Car>

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/carbook-master/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a asp-action="Index">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span> <span>Araçlar <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Araçlar</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-md-4">
                    <div class="car-wrap rounded ftco-animate">
                        <div class="img rounded d-flex align-items-end" style="background-image: url(@item.Image);">
                        </div>
                        <div class="text">
                            <h2 class="mb-0"><a asp-action="CarDetail" asp-route-id="@item.Id">@item.Model</a></h2>
                            <div class="d-flex mb-3">
                                <span class="cat">@item.Brand</span>
                                <p class="price ml-auto">@item.DailyPrice ₺ <span>/günlük</span></p>
                            </div>
                            <p class="d-flex mb-0 d-block"><a asp-action="Booking" asp-route-id="@item.Id" class="btn btn-primary py-2 mr-1">Rezervasyon</a> <a asp-action="CarDetail" asp-route-id="@item.Id" class="btn btn-secondary py-2 ml-1">Detay</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>